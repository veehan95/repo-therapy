{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./bin",
    "rootDir": "./",
    "removeComments": true
  }
}
